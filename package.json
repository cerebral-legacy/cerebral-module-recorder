{
  "name": "cerebral-module-recorder",
  "version": "0.0.0-semantically-released",
  "description": "A state recorder for Cerebral",
  "main": "index.js",
  "scripts": {
    "pretest": "standard",
    "test": "nodeunit tests",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "postcoverage": "cat ./coverage/lcov.info | coveralls",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cerebral/cerebral-module-recorder.git"
  },
  "keywords": [
    "cerebral",
    "record",
    "state"
  ],
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cerebral/cerebral-module-recorder/issues"
  },
  "homepage": "https://github.com/cerebral/cerebral-module-recorder#readme",
  "devDependencies": {
    "cerebral": "^0.35.0-0",
    "commitizen": "^2.5.0",
    "conventional-changelog": "0.0.17",
    "coveralls": "^2.11.11",
    "cz-customizable": "^2.7.0",
    "ghooks": "^1.3.2",
    "nodeunit": "^0.9.1",
    "nyc": "^7.0.0",
    "semantic-release": "^4.3.5",
    "standard": "^7.1.2",
    "validate-commit-msg": "^2.6.1"
  },
  "peerDependencies": {
    "cerebral": "^0.35.0-0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "release": {
    "analyzeCommits": "./sr-prerelease.js"
  },
  "nyc": {
    "exclude": [
      "tests/*"
    ]
  }
}
